<Page
    x:Class="Battleship.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Battleship"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="backgrounds/about.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="126*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="132*"/>
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='1' x:Name="AboutTitle"
    		HorizontalAlignment="Center"
    		Grid.Row="0"
    		Text="About"
    		VerticalAlignment="Top" 
    		Style="{StaticResource TitleTextBlockStyle}" Height="32" />

        <TextBlock x:ConnectionId='2' x:Name="AboutMessage"
    		HorizontalAlignment="Left"
    		Grid.Row="1"
    		Text="This app was created for the Windows Development Course."
    		VerticalAlignment="Top"
    		Margin="24,0" 
    		Style="{StaticResource TitleTextBlockStyle}" 
    		FontSize="14" Height="48" Width="250" />

        <TextBlock x:ConnectionId='3' x:Name="AboutMessage2"
    		HorizontalAlignment="Left"
    		Grid.Row="2"
    		Text="This app was developed by Paul Harvey and 
Anna Ioudovskaya and demonstrates everything we have learned 
over the course of the semester through the common Battleship Game."
    		VerticalAlignment="Top"
    		Margin="24,0" 
    		Style="{StaticResource TitleTextBlockStyle}" 
    		FontSize="14" Width="250" />

        <TextBlock x:ConnectionId='4' x:Name="AboutMessage3"
    		HorizontalAlignment="Left"
    		Grid.Row="3"
    		Text="Except instead of playing with a mate, you would be playing with the computer."
    		VerticalAlignment="Top"
    		Margin="24,0" 
    		Style="{StaticResource TitleTextBlockStyle}" 
    		FontSize="14" Height="48" Grid.RowSpan="2" Width="250" />

        <TextBlock x:ConnectionId='5' x:Name="AboutMessage4"
    		HorizontalAlignment="Left"
    		Grid.Row="4"
    		Text="We hope you enjoy what our game has to offer."
    		VerticalAlignment="Top"
    		Margin="24,0" 
    		Style="{StaticResource TitleTextBlockStyle}" 
    		FontSize="14" Height="48" Width="250" />

        <TextBlock x:ConnectionId='6' x:Name="AboutMessage5"
    		HorizontalAlignment="Left"
    		Grid.Row="5"
    		Text="Duration of project: 3 weeks. Published: December 2015."
    		VerticalAlignment="Top"
    		Margin="24,0" 
    		Style="{StaticResource TitleTextBlockStyle}" 
    		FontSize="14" Height="48" Grid.RowSpan="2" Width="250" />


            <StackPanel  BorderBrush="White" Margin="0,5,0,0" Width="250" Grid.Row="6">
            <HyperlinkButton x:ConnectionId='10' Name="paul" Content="(Paul) harv0116@algonquinlive.com" BorderBrush="White" Padding="5" Foreground="White"                          HorizontalAlignment="Center" FontSize="12" BorderThickness="1" Background="#FF9B9999"/>
            </StackPanel>
            <StackPanel  BorderBrush="White" Margin="0,5,0,0" Width="250" Grid.Row="7">
            <HyperlinkButton x:ConnectionId='9' Name="anna" Content="(Anna) ioud0001@algonquinlive.com" BorderBrush="White" Padding="5" Foreground="White"                          HorizontalAlignment="Center" FontSize="12" BorderThickness="1" Background="#FF9B9999" />
            </StackPanel>
        



        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" 
                    Margin="63,0,62,30" HorizontalAlignment="Center" Padding="0" Grid.Row="8" Height="32">
            <StackPanel CornerRadius="100" BorderBrush="White" Padding="0,0,10,0">
                <Button x:ConnectionId='8' Content="Main" BorderBrush="White" Foreground="White"                    />
            </StackPanel>
            <StackPanel CornerRadius="100" BorderBrush="White" Padding="10,0,0,0">
                <Button x:ConnectionId='7' Content="High Scores" BorderBrush="White" Foreground="White"                         />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

